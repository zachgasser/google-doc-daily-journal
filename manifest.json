{
  "manifest_version": 3,
  "name": "Daily Google Doc Journal",
  "version": "1.0",
  "description": "Opens a daily Google Doc journal on startup, creating a new one if it doesn't exist.",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://www.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "_________________________________________________ENTER YOUR CLIENT ID HERE_________________________________________________",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "action": {
    "default_icon": {
      "16": "logo_images/icon16.png",
      "48": "logo_images/icon48.png",
      "128": "logo_images/icon128.png"
    },
    "default_title": "Open Daily Journal"
  },
  "icons": {
    "16": "logo_images/icon16.png",
    "48": "logo_images/icon48.png",
    "128": "logo_images/icon128.png"
  }
}
